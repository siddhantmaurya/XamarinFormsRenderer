<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             xmlns:local="clr-namespace:XamarinFormsRenderers.CustomRendererControls"
             x:Class="XamarinFormsRenderers.MainPage">

    <StackLayout>
        <!-- Place new controls here -->
        <Label Text="Welcome to Xamarin.Forms!" 
           HorizontalOptions="Center"
           VerticalOptions="CenterAndExpand" />

        <Entry Placeholder="Default entry android Control "
               HorizontalOptions="CenterAndExpand"
               VerticalOptions="CenterAndExpand" />
        <local:RoundedEntry Placeholder="Custom rounded entry control"
                            HorizontalOptions="CenterAndExpand"
                            VerticalOptions="CenterAndExpand" />
        <local:RoundedButton/>
    </StackLayout>

</ContentPage>
